<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:layout_marginTop="@dimen/text_size_large"
    android:layout_marginBottom="@dimen/text_size_large"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_cardview1_margin"
       >
      <LinearLayout
          android:layout_width="match_parent"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          android:layout_height="wrap_content">
          <ImageView
              android:id="@+id/preson_image_view"
              android:layout_width="300dp"
              android:src="@drawable/birinci_dogru"
              android:layout_gravity="center_horizontal"
              android:layout_height="300dp"/>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/date_lbl"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="tesst"
                  android:textSize="@dimen/text_size_large"
                  android:textColor="@color/DeepPink"
                  android:layout_margin="@dimen/text_size_small"
                  android:layout_alignParentLeft="true"
                  >

              </TextView>
              <TextView
                  android:id="@+id/case_lbl"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="tesst"
                  android:textSize="@dimen/text_size_large"
                  android:textColor="@color/Green"
                  android:layout_margin="@dimen/text_size_small"
                  android:layout_alignParentRight="true"
                  >

              </TextView>
          </RelativeLayout>
      </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>